<?php
/**
 * Example: Citizen Search Endpoint
 * 
 * This is an example of how to implement the search endpoint.
 * Copy this pattern to your actual search.php file.
 */

session_start();

// CORS headers
header('Access-Control-Allow-Origin: http://localhost:5173');
header('Access-Control-Allow-Credentials: true');
header('Access-Control-Allow-Methods: GET, OPTIONS');
header('Access-Control-Allow-Headers: Content-Type');
header('Content-Type: application/json');

// Handle preflight
if ($_SERVER['REQUEST_METHOD'] === 'OPTIONS') {
    http_response_code(200);
    exit;
}

// Check if user is authenticated
if (!isset($_SESSION['user_id'])) {
    http_response_code(401);
    echo json_encode([
        'success' => false,
        'message' => 'Unauthorized. Please login.'
    ]);
    exit;
}

require_once __DIR__ . '/../../config/database.php';
require_once __DIR__ . '/../../middlewares/permission.php';

try {
    // Check permission
    requirePermission('VIEW_CITIZEN');
    
    $pdo = getDBConnection();
    $query = $_GET['q'] ?? '';
    
    if (empty($query)) {
        http_response_code(400);
        echo json_encode([
            'success' => false,
            'message' => 'Search query is required'
        ]);
        exit;
    }
    
    // Search by National ID or name
    $searchTerm = '%' . $query . '%';
    
    $stmt = $pdo->prepare("
        SELECT 
            national_id as nationalId,
            first_name as firstName,
            middle_name as middleName,
            last_name as lastName,
            gender,
            date_of_birth as dateOfBirth,
            place_of_birth as placeOfBirth,
            nationality,
            status
        FROM citizens
        WHERE national_id LIKE ? 
           OR first_name LIKE ?
           OR last_name LIKE ?
           OR CONCAT(first_name, ' ', last_name) LIKE ?
        ORDER BY first_name, last_name
        LIMIT 50
    ");
    
    $stmt->execute([$searchTerm, $searchTerm, $searchTerm, $searchTerm]);
    $citizens = $stmt->fetchAll(PDO::FETCH_ASSOC);
    
    http_response_code(200);
    echo json_encode([
        'success' => true,
        'citizens' => $citizens,
        'count' => count($citizens)
    ]);
    
} catch (Exception $e) {
    http_response_code(500);
    echo json_encode([
        'success' => false,
        'message' => 'An error occurred while searching',
        'error' => $e->getMessage()
    ]);
}

